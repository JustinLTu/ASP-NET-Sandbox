@model ZonePostings.Models.Player

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="Strelok"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Savings" class="control-label"></label>
                <input asp-for="Savings" class="form-control" />
                <span asp-validation-for="Savings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Health" class="control-label"></label>
                <select asp-for="Health" class="form-control">
                    <option value="0">Unconcious</option>
                    <option value="1">Dire</option>
                    <option value="2">Hurt</option>
                    <option selected="selected" value="3">Healthy</option>
                </select>
                <span asp-validation-for="Health" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment" class="control-label"></label>
                <select asp-for="Equipment" class="form-control">
                    <option selected="selected" value="1">Worn</option>
                    <option value="2">Alternative</option>
                    <option value="3">Modern</option>
                    <option value="4">Customized</option>
                </select>
                <span asp-validation-for="Equipment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
